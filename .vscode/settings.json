{
  // Format on save
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,

  // C# specific settings - use MS C# extension which respects .editorconfig
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // XAML specific settings
  "[xml]": {
    "editor.formatOnSave": true
  },

  // Trim trailing whitespace on save (applies to all files)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Use .editorconfig (don't auto-detect indentation)
  "editor.detectIndentation": false,

  // OmniSharp settings - enable .editorconfig support
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableRoslynAnalyzers": true,

  // C# Dev Kit / Roslyn settings
  "dotnet.format.enable": true,

  // Organize imports on save for C#
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  }
}
