<Window x:Class="RequiemGlamPatcher.Views.OutfitPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="clr-namespace:HelixToolkit.Wpf.SharpDX;assembly=HelixToolkit.Wpf.SharpDX"
        Title="Outfit Preview"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.PanelBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <helix:Viewport3DX x:Name="PreviewViewport"
                           Grid.Row="0"
                           ClipToBounds="True"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Focusable="True"
                           ShowCoordinateSystem="False"
                           ShowFrameRate="False"
                           EnableCurrentPosition="False"
                           UseDefaultGestures="True"/>

        <Border Grid.Row="1"
                Background="#22000000"
                Padding="12"
                BorderThickness="0">
            <StackPanel>
                <StackPanel x:Name="MissingAssetsPanel"
                            Margin="0,0,0,8">
                    <TextBlock Text="Missing assets:" FontWeight="Bold"/>
                    <ItemsControl x:Name="MissingAssetsList" Margin="0,4,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset View"
                            Margin="0,0,8,0"
                            Padding="14,6"
                            Click="OnResetView"/>
                    <Button Content="Close"
                            Padding="14,6"
                            IsCancel="True"
                            Click="OnClose"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
